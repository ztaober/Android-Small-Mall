<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="#23427A" />

            <gradient android:angle="-90" android:endColor="#E6E6E6" android:startColor="#E6E6E6" />

            <padding android:bottom="2dip" android:left="5dip" android:right="5dip" android:top="2dip" />
            
            <corners android:radius="5dip"/>
        </shape></item>
        
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="#23427A" />

             <gradient android:angle="-90" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />

            <padding android:bottom="2dip" android:left="10dip" android:right="10dip" android:top="2dip" />

            <corners android:radius="5dip"/>
        </shape></item>

</selector>