<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ********************** 通用style *********************** -->
    <!-- 默认提交按钮样式 -->
    <style name="default_textview_btn">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/selector_defult_btn_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 默认文本 例如:edittext左边的提示文字 -->
    <style name="default_textview_txt1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/all_txt_32</item>
        <item name="android:textColorHint">@color/all_txt_b4</item>
    </style>
    <!-- edittext的默认样式 -->
    <style name="default_edit_style">
        <item name="android:layout_height">@dimen/base_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/edit_white_bg_normal</item>
        <item name="android:textColor">@color/all_txt_32</item>
        <item name="android:textColorHint">@color/all_txt_b4</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>
    <!-- LoginEdit的默认样式 -->
    <style name="login_edit_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/all_txt_32</item>
        <item name="android:textColorHint">@color/all_txt_b4</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>
    <!-- 竖线 -->
    <style name="line_view_h">
        <item name="android:layout_width">@dimen/line_view</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/view_line</item>
    </style>
    <!-- 横线 -->
    <style name="line_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_view</item>
        <item name="android:background">@color/view_line</item>
    </style>
    <!-- **********************Custom view style*********************** -->


    <!-- 标题栏自定义按钮样式 -->
    <style name="view_title_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>