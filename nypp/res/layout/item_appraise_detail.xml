<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/goods_detail_appraise_ll"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/goods_detail_appraise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font24" />

            <RatingBar
                android:id="@+id/goods_detail_ratingbar"
                style="@style/duefun_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/goods_detail_appraise_name"
                android:isIndicator="true"
                android:numStars="5" />
        </RelativeLayout>

        <TextView
            android:id="@+id/goods_detail_appraise_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/font24" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/goods_detail_appraise_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/opt_gray"
                android:textSize="@dimen/font24" />

            <TextView
                android:id="@+id/goods_detail_appraise_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/opt_gray"
                android:textSize="@dimen/font24" />

            <TextView
                android:id="@+id/goods_detail_appraise_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/opt_gray"
                android:textSize="@dimen/font24" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_view"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/trans50" />
    </LinearLayout>

</LinearLayout>