<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/light_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sline_view"
        android:background="@color/trans30" />

    <com.qws.nypp.view.AutoSizeListView
        android:id="@+id/order_suk_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="#00000000" >
    </com.qws.nypp.view.AutoSizeListView>
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <TextView 
            android:id="@+id/item_order_info_logis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额(含运费10.00元)"
            android:textColor="#000"
            android:textSize="@dimen/font24"/>
        <TextView 
            android:id="@+id/item_order_info_pices"
            android:layout_toRightOf="@+id/item_order_info_logis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$200.00"
            android:textSize="@dimen/font24"
            android:textColor="@color/light_red"/>
        <TextView 
            android:id="@+id/item_order_info_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="待付款"
            android:textSize="@dimen/font24"
            android:textColor="@color/light_red"/>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sline_view"
        android:background="@color/trans30" />

</LinearLayout>