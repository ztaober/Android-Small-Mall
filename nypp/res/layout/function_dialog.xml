<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_re"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_corner_line"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:textColor="#7f7f7f"
            android:textSize="16sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
		    android:layout_height="1dip"
		    android:background="#cbcbcb" />

        <LinearLayout
            android:id="@+id/left_and_right"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/left_bt"
                style="@style/head_memu_text_style"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/fuction_left_selector" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#cbcbcb" />
            
            <Button
                android:id="@+id/right_bt"
                style="@style/head_memu_text_style"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@drawable/fuction_right_selector"/>
        </LinearLayout>
        <Button
                android:id="@+id/center_bt"
                style="@style/head_memu_text_style"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_weight="1.0"
                android:background="@drawable/action_menu_bottom_seletor"/>
    </LinearLayout>

</RelativeLayout>