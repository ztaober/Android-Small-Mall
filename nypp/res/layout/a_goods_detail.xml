<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    <com.qws.nypp.view.TitleView
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_weight="1"
        android:id="@+id/goods_detail_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.qws.nypp.view.AdCarouselView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.qws.nypp.view.AdCarouselView>

            <TextView
                android:id="@+id/goods_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="11dip"
                android:text="我if骄傲耳机发哦风景奥尔夫i骄傲二纺机哦啊附件"
                android:textColor="@color/nypp_black"
                android:textSize="@dimen/font_size_big" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="11dip" >

                <TextView
                    android:id="@+id/goods_detail_sold_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="成交666笔"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/nypp_gray" />

                <TextView
                    android:id="@+id/goods_detail_stock_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="库存666件"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/nypp_gray" />

                <TextView
                    android:id="@+id/goods_detail_mini_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="6件起批"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/light_red" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="11dip" >

                <TextView
                    android:id="@+id/goods_detail_pre_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="￥100.00"
                    android:textSize="@dimen/font_size_big"
                    android:textColor="@color/light_red" />

                <TextView
                    android:id="@+id/goods_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/goods_detail_pre_price"
                    android:text="￥166.00"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/nypp_gray" />

                <TextView
                    android:id="@+id/goods_detail_logistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="快递66元"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/nypp_gray" />

                <TextView
                    android:id="@+id/goods_detail_harbour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="北京"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/light_red" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="11dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/light_red" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="11dip" >

                <TextView
                    android:id="@+id/goods_detail_appraise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="宝贝评价（14）"
                    android:textSize="@dimen/font_size_middle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_view"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/trans50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="质量不错!~~~~~~~~~~nice" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2016.4.21" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="尺寸:SM" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="颜色:绿色" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="查看全部评价"
                        android:textSize="@dimen/font_size_big" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11dp"
                        android:text="商品详情" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_view"
                    android:background="@color/trans50" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="11dp"
                        android:text="产品参数" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/detail_collection"
           android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="收藏" />

        <Button
            android:id="@+id/detail_add_cart"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="加入购物车" />

        <Button
            android:id="@+id/detail_buy"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="购买" />
    </LinearLayout>

</LinearLayout>