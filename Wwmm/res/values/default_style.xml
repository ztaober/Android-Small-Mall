<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ********************** 通用style *********************** -->
    <!-- 默认提交按钮样式 -->
    <style name="default_textview_btn"></style>
    <!-- 默认TextView -->
    <style name="default_textview_txt1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textColorHint">#cccccc</item>
    </style>
    <!-- 默认EditText -->
    <style name="default_edit_style"></style>
    <!-- 竖线 -->
    <style name="line_view_h">
        <item name="android:layout_width">@dimen/line_view</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/view_line</item>
    </style>
    <!-- 横线 -->
    <style name="line_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_view</item>
        <item name="android:background">@color/view_line</item>
    </style>
    <!-- **********************Custom view style*********************** -->

    <!-- 标题栏自定义按钮样式 -->
    <style name="view_title_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>